<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/askQBody"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorDarkBlue"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_marginBottom="6dp"
            android:text="Edit this Post"/>
        <EditText
            android:id="@+id/jokeMsgBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/design_border_grey"
            android:hint="write here..."
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:inputType="text|textMultiLine"
            android:minLines="3"
            android:gravity="top"
            android:maxLines="50"
            android:padding="8dp"
            android:scrollbars="vertical"
            tools:ignore="Autofill" />

        <com.github.florent37.shapeofview.shapes.RoundRectView
            android:id="@+id/text_delete_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:shape_roundRect_bottomLeftRadius="24dp"
            app:shape_roundRect_bottomRightRadius="24dp"
            app:shape_roundRect_topLeftRadius="24dp"
            app:shape_roundRect_topRightRadius="24dp"
            android:layout_marginTop="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorAccent"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete Post"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:padding="4dp" />

            </LinearLayout>

        </com.github.florent37.shapeofview.shapes.RoundRectView>
        <com.github.florent37.shapeofview.shapes.RoundRectView
            android:id="@+id/text_update_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:shape_roundRect_bottomLeftRadius="24dp"
            app:shape_roundRect_bottomRightRadius="24dp"
            app:shape_roundRect_topLeftRadius="24dp"
            app:shape_roundRect_topRightRadius="24dp"
            android:layout_marginTop="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update Post"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:padding="4dp" />

            </LinearLayout>

        </com.github.florent37.shapeofview.shapes.RoundRectView>
        <com.github.florent37.shapeofview.shapes.RoundRectView
            android:id="@+id/closeDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:shape_roundRect_bottomLeftRadius="24dp"
            app:shape_roundRect_bottomRightRadius="24dp"
            app:shape_roundRect_topLeftRadius="24dp"
            app:shape_roundRect_topRightRadius="24dp"
            android:layout_marginTop="36dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/textColorPrimary"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Close"
                    android:textColor="#dedede"
                    android:textStyle="bold"
                    android:padding="4dp" />

            </LinearLayout>

        </com.github.florent37.shapeofview.shapes.RoundRectView>
    </LinearLayout>


</ScrollView>
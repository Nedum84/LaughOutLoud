<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/nwErrorPageWrapper"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:visibility="gone"
    android:layout_height="match_parent"
    android:layout_marginBottom="40dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/ic_network_check_grey"
        tools:ignore="ContentDescription"
        android:padding="8dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="14sp"
        android:gravity="center"
        android:padding="4dp"
        android:textColor="#000"
        android:text="No network connection"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="12sp"
        android:gravity="center"
        android:padding="4dp"
        android:textColor="#878"
        android:layout_marginBottom="10dp"
        android:text="please check your network and retry"/>
    <LinearLayout
        android:id="@+id/tapToRetry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retry"
            android:background="@drawable/design_border_radius_accent"
            android:textSize="16sp"
            android:textColor="#f1f2f1"
            android:padding="3dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"/>
    </LinearLayout>
</LinearLayout>